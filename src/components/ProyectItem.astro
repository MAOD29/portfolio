---
import Link from "./Link.astro";

export interface Props {
  title: string;
  src: string;
  github: string;
  demo: string;
}
const { title, src, github, demo } = Astro.props;
---

<div
  class="splide__slide flex-[0_0_85%] md:flex-[0_0_50%] flex flex-col justify-center items-center gap-2"
>
  <img
    alt={title}
    class="transition-all hover:scale-110 duration-300 cursor-pointer rounded-xl object-cover w-[90%] h-[90%] p-4"
    src={src}
  />
  <span>{title}</span>
  <div class="flex gap-4 p-1">
    <Link src={github} svg="/github.svg" />
    <Link src={demo} svg="/link.svg" />
  </div>
</div>

<style>
  .slider-item {
    flex: 0 0 50%;
  }
</style>
