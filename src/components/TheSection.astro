---
export interface Props {
    id: string;
    title: string;
    description: string;
}
const { id, title, description } = Astro.props;
---

<section id={id} class="py-5">
    <div class="flex flex-wrap mt-10 mb-5 md:p-3 lg:p-0 relative">
        <div
            class="w-full lg:w-1/2 p-5 lg:border-l-4 border-slate-700 relative md:pl-9 pl-0"
        >
            <h1 class="text-2xl md:text-5xl font-bold">{title}</h1>
            <p class="text-xl dark:text-slate-500 text-slate-500">
                {description}
            </p>
        </div>
    </div>
    <slot />
</section>
