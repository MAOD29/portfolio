---
export interface Props {
  company: string;
  job: string;
  date: string;
  task: string[];
}
const { company, job, date, task } = Astro.props;
---

<div
  class="flex flex-col relative before:absolute before:top-2 before:w-2 before:h-4 before:rounded-full before:left-[-30px] before:z-[1] before:bg-white px-3"
>
  <h3 class="text-xl font-semibold tracking-wide">{company}</h3>
  <p class="text-base tracking-wide uppercase text-gray-100">
    {job}
  </p>
  <p class="text-base tracking-wide uppercase text-gray-400">
    {date}
  </p>
  <ul class="mt-3 pl-4 list-disc flex flex-col gap-1 text-balance">
    {task.map((task) => <li>{task}</li>)}
  </ul>
</div>

<style>
  .text-balance {
    max-width: 600px;
    text-wrap: balance;
  }
</style>
