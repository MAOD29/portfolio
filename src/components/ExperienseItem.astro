---
export interface Props {
    company: string;
    job: string;
    date: string;
    task: string[];
}
const { company, job, date, task } = Astro.props;
---

<div
    class="flex flex-col sm:relative sm:before:absolute sm:before:top-2 sm:before:w-4 sm:before:h-4 sm:before:rounded-full sm:before:left-[-35px] sm:before:z-[1] before:bg-white"
>
    <h3 class="text-xl font-semibold tracking-wide">{company}</h3>
    <p class="text-xs tracking-wide uppercase text-gray-400">
        {job}
    </p>
    <p class="text-xs tracking-wide uppercase text-gray-400">
        {date}
    </p>
    <ul class="mt-3 pl-6 list-disc flex flex-col gap-3">
        {task.map((task) => <li>{task}</li>)}
    </ul>
</div>
