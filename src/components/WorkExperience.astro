---
import { t } from "i18next";
import { EXPERIENCES } from "../shared/constants";
import ExperienseItem from "./ExperienseItem.astro";
import TheSection from "./TheSection.astro";
---

<TheSection id="exp" title={t("home.experience.title")} description={t("home.experience.subtitle")}>
  <div class="relative col-span-12 pl-4 space-y-6 sm:col-span-9">
    <div
      class="col-span-12 space-y-12 relative pl-4 sm:col-span-8 sm:space-y-8 sm:before:absolute sm:before:top-2 sm:before:bottom-0 sm:before:w-0.5 sm:before:-left-3 before:bg-gray-700"
    >
      {
        EXPERIENCES.map((exp) => (
          <ExperienseItem
            company={exp.company}
            job={exp.job}
            date={exp.date}
            task={exp.task}
          />
        ))
      }
    </div>
  </div>
</TheSection>
