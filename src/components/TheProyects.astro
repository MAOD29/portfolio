---
import ProyectItem from "./ProyectItem.astro";
import { PROYECTS } from "../shared/constants";
---

<section id="portfolio" class="py-7">
  <div class="flex flex-wrap mt-10 mb-5 md:p-3 lg:p-0 relative">
    <div
      class="w-full lg:w-1/2 p-5 lg:border-l-4 border-slate-700 relative md:pl-9 pl-0"
    >
      <h1 class="text-2xl md:text-5xl font-bold">My work</h1>
      <p class="text-xl dark:text-slate-500 text-slate-500">
        Algunos de los proyectos que he realizado.
      </p>
    </div>
  </div>
  <div class="flex w-full overflow-x-auto overflow-y-hidden scroll p-4 gap-8">
    {
      PROYECTS.map((proyect) => (
        <ProyectItem
          title={proyect.title}
          src={proyect.src}
          github={proyect.github}
          demo={proyect.demo}
        />
      ))
    }
  </div>
</section>
